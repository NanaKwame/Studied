<html>
<div class="inlineb login-all">
  <%= image_tag("landingpage.jpg", :class => "login-bckgd")%>
<div class="login-bottom inlineb">
  <div class= "login-about inlineb ">
    <h1>Studiiaid allows its users to rent textbooks on a time needed basis.</h1>
  </div>


  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "login-signup inlineb"}) do |f| %>
    <%= devise_error_messages! %>
    <h1>Sign up</h1>

    <div class="signup-names">
    <%= f.text_field :firstName, autofocus: true, :required => true, :placeholder => "First Name" %>
    <%= f.text_field :lastName, autofocus: true , :required => true, :placeholder => "Last Name"%>
    </div>

    <div class="signup-email">
    <%= f.email_field :email, autofocus: true, :required => true, :placeholder => "Email" %></div>

    <div class="signup-pwd">
      <%= f.password_field :password, autocomplete: "off", :required => true, :placeholder => "Password" %></div>

    <div class="signup-cnpwd">
      <%= f.password_field :password_confirmation, autocomplete: "off", :required => true, :placeholder => "Confirm Password" %></div>

    <div class="signup-but"><%= f.submit "Sign up" %></div>
  <% end %>
</div>

</div>
<script type="text/javascript">
var landingResize = function() {
      var documentHeight = $(document).height();
    var documentWidth = $(document).width();
    $(".login-all").height(documentHeight);
    // $().height();
    $(".login-all").width(documentWidth);
    $("#navbar").width(documentWidth);
    // $().width();
}

$(window).resize(landingResize);

landingResize();

</script>

</html>