<h1>Listing libraries</h1>

<%= link_to 'New Library', new_library_path, :class => "btn btn-default index-new-button"  %>


<table class="table  table-bordered">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Book ID</th>
      <th>Description</th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.each do |library| %>
      <tr>
        <td><%= library.user_id%> - <%=library.user.fullName%></td>
        <td><%= library.book_id%> - <%=library.book.title%> (ISBN: <%=library.book.ISBN%>)</td>
        <td><%= library.description%></td>
        <td>
        <%= link_to 'Edit', edit_library_path(library) %>
        <%= link_to 'Destroy', library, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

