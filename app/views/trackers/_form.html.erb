<%= form_for(@tracker) do |f| %>
  <% if @tracker.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tracker.errors.count, "error") %> prohibited this tracker from being saved:</h2>

      <ul>
      <% @tracker.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div><%= f.label :user_id %><br />
    <%= f.select("user_id", User.all.collect {|p| [ p.fullName, p.id ] }, { include_blank: false }) %>
  </div>

  <div><%= f.label :book_id %><br />
  <%= f.select("book_id", Book.all.collect {|p| [ p.title+"- ISBN: "+p.ISBN, p.id ] }, { include_blank: false }) %>
  </div>

  <div><%= f.label :start_time %><br />
  <%= f.datetime_select :start_time %></div>

  <div><%= f.label :end_time %><br />
  <%= f.datetime_select :end_time %></div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
