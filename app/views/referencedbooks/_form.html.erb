    <div><%= f.label :forum_id %><br />
    <%= f.select("forum_id", Forum.all.collect {|p| [ p.title+" by "+p.user.fullName, p.id ] }, { include_blank: false }) %></div>
    <%= f.submit %>
  </div>
<% end %>
